{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "lib": [
      "ES2020",
      "ESNext.AsyncIterable"
    ],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@services/*": ["server/services/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
